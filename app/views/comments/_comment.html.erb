<div class="content comment_list_show">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card-box">
                        <h4 class="text-dark header-title">Item: <%= @item.content%></h4>
                        <p class="text-muted m-b-30 font-13"><%= pluralize(@item.comments.count, "comment")%> for this item:</p>
                        <a href="#comment_form" class="btn btn-custom btn-block mt-3 waves-effect waves-light"><i class="fa fa-plus-circle"></i> Add New</a>
                        <ul class="sortable-list taskList list-unstyled ui-sortable" id="upcoming">
                            <% @item.comments.reverse.each do |comment| %>
                            <li class="task-warning ui-sortable-handle" id="task1">
                                <div class="checkbox checkbox-custom checkbox-single float-right">
                                </div><%= comment.content %><br>
                                <div class="clearfix"></div>
                                <% if current_user == comment.audience %>
                                (<%= link_to "delete comment", item_comment_path(@item, comment), method: :delete %>)
                                <% end %>
                                <div class="mt-3">
                                    <p class="mb-0">
                                        <a href="" class="text-muted"><span class="font-bold font-secondary"><%= link_to comment.audience.fullname, user_path(comment.audience) %></span></a> - <span class="time_ago"><%= distance_of_time_in_words(Time.now, comment.created_at)%> ago</span>
                                    </p>
                                </div>
                            </li>
                            <% end %>
                        </ul>
                        <div>Leave a comment: </div>
                        <div id="comment_form"><%= render "comments/form" %></div>
                </div>
            </div>
        </div>
    </div>
</div>