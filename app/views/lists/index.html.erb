<h1>All the bucketlists in the website:</h1>

<%= form_tag lists_path, method: :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= button_tag "Search"%>
  </p>
<% end %>
<button><%= link_to "Advanced Search", new_search_path %></button>

<ul>
  <% @lists.each do |list|%>
    <li><%= link_to list.title, list_path(list) %></li>
  <% end %>
</ul>
