<h1><%= @list.title%></h1>

<div>by: <%= @list.creator.name %></div>

<ul>
<% @list.items.each do |item| %>
  <li><%= link_to item.content, item_path(item) %></li>
<% end %>
</ul>

<%= form_for @list.items.build do |f| %>

   <%= f.label :content %>
   <%= f.text_field :content %>

   <%= f.label :status %>
   <%= f.select :status, ["Not started yet", "In progress", "Finished"]%>

   <%= f.label :category %>
   <%= f.text_field :category %>

   <%= f.hidden_field :list_id, value: @list.id %>

   <%= f.submit %>
<% end %>