<h1><%= @list.title%></h1>

<div>Creator: <%= @list.creator.name %></div>
<%= render "follows/button" %>
<%= @list.follows.count %>

<ul>
<% @list.items.each do |item| %>
  <li><%= link_to item.content, item_path(item) %>
      <%= link_to "Delete", item_path(item), method: :delete %>
  </li>
<% end %>
</ul>

<%= form_for @list.items.build do |f| %>

   <%= f.label :content %>
   <%= f.text_field :content %>

   <%= f.label :status %>
   <%= f.select :status, ["Not started yet", "In progress", "Finished"]%>

   <%= f.label :category %>
   <%= f.select :category, ["Food/Drink", "Travel/Destination", "Entertainment", "Nature/Wildlife", "Relationship", "Creativity", "Fashion/Beauty", "Other"] %>

   <%= f.hidden_field :list_id, value: @list.id %>

   <%= f.submit %>
<% end %>