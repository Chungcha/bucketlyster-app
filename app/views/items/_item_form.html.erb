<%= render partial: "shared/error_message", locals: {variable: @item} %>

<%= form_for(@item) do |f| %>

   <%= f.label :content %>
   <%= f.text_field :content %>

   <%= f.label :status %>
   <%= f.select :status, ["Not started yet", "In progress", "Finished"] %>

   <%= f.label :category %>
   <%= f.text_field :category %>

   <%= f.hidden_field :list_id, value: %>

   <%= f.submit %>
<% end %>