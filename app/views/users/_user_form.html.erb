<%= render partial: "shared/error_message", locals: {variable: @user} %>


<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :fullname %>
  <%= f.text_field :fullname %><br><br>

  <%= f.label :lists, "Create your new bucketlist!"%>
  <%= f.fields_for :lists, @user.lists.build do |field| %>
     <%= field.label :title %>
     <%= field.text_field :title %>
     <%= field.hidden_field :creator_id, value: @user.id %>
  <% end %>

  <%= f.submit %>
<% end %>
