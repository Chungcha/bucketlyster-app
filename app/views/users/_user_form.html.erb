<%= render partial: "shared/error_message", locals: {variable: @user} %>

<%= form_for(@user) do |f| %>

   <%= f.label :username %>
   <%= f.text_field :username %>

   <%= f.label :password %>
   <%= f.text_field :password %>

   <%= f.label :fullname %>
   <%= f.text_field :fullname %>

   <%= f.label :lists_created, "Add a new bucketlist:" %>
   <%= f.fields_for :lists_created, @user.lists_created.build do |list_fields| %>
      <%= list_fields.label :title %>
      <%= list_fields.text_field :title %>
      <%= list_fields.hidden_field :creator_id, value: @user.id %>
   <% end %>

   <%= f.submit "Create a user" %>
<% end %>