<%= render partial: "shared/error_message", locals: {variable: @user} %>

<%= form_for(@user) do |f| %>

   <%= f.label :username %>
   <%= f.text_field :username %>

   <%= f.label :password %>
   <%= f.text_field :password %>

   <%= f.label :fullname %>
   <%= f.text_field :fullname %><br><br>

   <%= f.label :lists, "Create a new bucketlist!"%>
   <%= f.fields_for :lists, @user.lists.build do |field| %>
      <%= field.label :title %>
      <%= field.text_field :title %>
      <%= field.hidden_field :creator_id, value: @user.id %>
   <% end %>

   <%= f.submit %>
<% end %>